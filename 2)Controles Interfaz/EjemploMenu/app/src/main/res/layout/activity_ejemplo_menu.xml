    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".EjemploMenu">

    <TextView android:text="Ejemplo de Uso del Menu de Android" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Rotulito"
        android:textSize="20dp" />

    <TextView android:text="(El Action Bar)" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Rotulito2"
        android:textSize="16dp"
        android:layout_below="@+id/Rotulito"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
