<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="ejemplos.universidad.sqlitebasico.MainActivity"
    android:id="@+id/Clientes_Frm"
    android:background="#96fffdad">

    <TextView android:text="Lista de Clientes" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Titulo_Lab"
        android:textSize="18dp"
        android:textColor="#ff000000"
        android:focusableInTouchMode="false"
        android:focusable="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:id="@+id/Sale_Btn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NomClie_Txt"
        android:layout_above="@+id/Sale_Btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del Cliente:"
        android:id="@+id/NomClie_Lab"
        android:layout_above="@+id/NomClie_Txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NumClie_Txt"
        android:layout_above="@+id/NomClie_Lab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/NomClie_Lab"
        android:layout_alignEnd="@+id/NomClie_Lab"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:textColor="#ff000000" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Número Cliente:"
        android:id="@+id/NumClie_Lab"
        android:layout_above="@+id/NumClie_Txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:textColor="#ff000000" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Tel_Txt"
        android:layout_alignBottom="@+id/NumClie_Txt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/Titulo_Lab"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_toEndOf="@+id/Titulo_Lab" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Teléfono:"
        android:id="@+id/Tel_Lab"
        android:layout_alignBottom="@+id/NumClie_Lab"
        android:layout_alignLeft="@+id/Tel_Txt"
        android:layout_alignStart="@+id/Tel_Txt"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:textColor="#ff000000" />

    <ListView
        android:id="@+id/Clientes_listView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"

        android:divider="#FFCC00"
        android:dividerHeight="2dp"

        android:layout_weight="1"
        android:layout_below="@+id/Titulo_Lab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/NumClie_Lab"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:drawSelectorOnTop="false"
        android:footerDividersEnabled="false"
        android:focusableInTouchMode="false"
        android:focusable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:id="@+id/Guarda_Btn"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/NomClie_Txt"
        android:layout_alignEnd="@+id/NomClie_Txt" />

</RelativeLayout>
